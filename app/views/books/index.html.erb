<h2>New book</h2>

<div class="form">
  <%= form_with model: @book, local: true do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>
</div>

<div class="books">
  <h2>Books</h2>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
</div>