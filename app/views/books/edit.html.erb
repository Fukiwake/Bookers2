<div class="form">
  <%= form_with model: @book, local: true do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
</div>
<p>
<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path%>
</p>