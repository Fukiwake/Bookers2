<div class="book">
  <h2>Book detail</h2>
  <% if @book.user == current_user %>
    <table>
      <tbody>
        <tr>
          <td></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" } %></td>
        </tr>
      </tbody>
    </table>
  <% else %>
    <table>
      <tbody>
        <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>