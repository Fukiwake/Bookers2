<h2>User info</h2>
<%= form_with model: @user, local: true do |f| %>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>
<%= f.label :profile_image, "image" %>
<%= f.attachment_field :profile_image %>
<%= f.label :introduction, "introduction" %>
<%= f.text_area :introduction %>
<%= f.submit "Update User"%>
<% end %>